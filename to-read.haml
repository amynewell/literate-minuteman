- books.each do |book|
  .book
    %h2= book[:title]
    - by_isbn = book[:by_isbn]
    - unless by_isbn.empty?
      %p Found a match by ISBN at #{by_isbn.length} branches
      %ul
        - by_isbn.each do |branch, status|
          %li #{branch} : #{status}
      Search 
      %a{:href => search_url(book[:title]) } by title
    - by_title = book[:by_title]
    - unless by_title.empty?
      %p No ISBN matches. Found #{by_title.length} candidates with title search:
      %ul
        - by_title.each do |link, name|
          %li
            %a{:href=>link}= name
      
